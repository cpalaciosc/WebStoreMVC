@model IEnumerable<WebStoreMVC.Models.ShoppingCart.HistorialCompraModel>

@{
    ViewBag.Title = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count()==0)
{
    <div class="alert alert-info div-spacing" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Mensaje:</span>
        No posee historial de compra
    </div>
}

else
{

<h2>Historial de compras</h2>

    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Compra.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle.cantidad)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Compra.fecha.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalle.cantidad)
                </td>
            </tr>
        }
    </table>
}