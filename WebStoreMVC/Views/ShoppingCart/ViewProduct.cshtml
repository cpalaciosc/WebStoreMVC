@model WebStoreMVC.Models.Producto


@{
    ViewBag.Title = Model.nombre;
}

@using (Html.BeginForm("Checkout", "ShoppingCart", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row row-centered">
        <div class="col-sm-6 col-md-10 col-centered">
            <div class="thumbnail product-img-preview">
                @Html.Image(Model.imagen, "img-list-big")
            </div>
            <div class="caption">
                <h3>@Html.DisplayFor(model => model.nombre)</h3>
                <p>@Html.DisplayFor(model => model.descripcion)</p>
                <p>
                    <span class="label-gris">Precio:</span>
                    <span class="precio red"><span class="glyphicon glyphicon-euro" aria-hidden="true"></span>@Html.DisplayFor(model => model.precio)</span>
                </p>
                <p>
                    <span class="label-negra">Cantidad:</span>
                    <span>@Html.Quantity("")</span>
                </p>
                <p>
                    <button type="submit" class="btn btn-primary" role="button">
                        <span class="glyphicon glyphicon-shopping-cart"></span>Añadir a la cesta
                    </button>
                    @Html.ActionLink("Cancelar", "Catalog", "ShoppingCart", null, new { @class = "btn btn-warning", @role = "button" })
                </p>
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.id)
}